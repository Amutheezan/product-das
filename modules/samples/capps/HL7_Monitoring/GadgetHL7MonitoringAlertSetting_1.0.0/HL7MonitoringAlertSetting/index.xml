<?xml version="1.0" encoding="UTF-8" ?>
<Module>
    <ModulePrefs title="Subscriber" description="Subscriber">
        <Require feature="pubsub-2"/>
        <Require feature="dynamic-height"/>
    </ModulePrefs>
    <Content type="html">
        <![CDATA[
        <head>

          <!-- Theme -->
          <link rel="stylesheet" type="text/css" href="/portal/libs/bootstrap_3.3.5/css/bootstrap.min.css" />
          <link rel="stylesheet" type="text/css" href="/portal/libs/font-wso2_1.0.0/css/font-wso2.min.css" />
          <link rel="stylesheet" type="text/css" href="/portal/libs/theme-wso2_1.0/css/theme-wso2.css" />
          <link rel="stylesheet" type="text/css" href="../HL7MonitoringGadgetCommon/css/nanoscroller.css" />
          <link rel="stylesheet" type="text/css" href="../HL7MonitoringGadgetCommon/css/gadget.css" />
          <link rel="stylesheet" type="text/css" href="css/jquery-ui.css">
          <link rel="stylesheet" type="text/css" href="css/select2.css" rel="stylesheet" />
          <link rel="stylesheet" type="text/css" href="css/select2.min.css" rel="stylesheet" />

          <script type="text/javascript" src="../HL7MonitoringGadgetCommon/js/jquery-1.10.2.js"></script>
            <script type="text/javascript" src="../HL7MonitoringGadgetCommon/js/jquery.nanoscroller.min.js"></script>
            <script type="text/javascript" src="js/jquery-ui.js"></script>
            <script type="text/javascript" src="js/select2.js"></script>
            <script type="text/javascript" src="js/select2.min.js"></script>
          <script src="js/main.js"></script>

        </head>
        <body>
          <div id="alertSetting">

            <h3>Disease Alert Setting </h3>
<div>
              <div class="form-group col-xs-3">
                <label for="diseaseAlert">Occurance Limit : </label>
                <input type="text" class="form-control input-sm" id="diseaseAlert" value="10"/>
              </div>
              <div class="form-group col-xs-4">
                <label for="diseaseAlertArea">Radius (in km's) : </label>
                <input type="text" class="form-control input-sm" id="diseaseAlertArea" value="1"/>
              </div>
              <div class="form-group col-xs-4">
                <label for="diseaseAlertTime">Preferred Time Period (in days) : </label>
                <input type="text" class="form-control input-sm" id="diseaseAlertTime" value="10"/>
              </div>
              <div class="form-group col-xs-3">
                <label for="diseaseEmail">Email Address : </label>
                <input type="text" class="form-control input-sm" id="diseaseEmail" placeholder="sample@email.com"/>
              </div>
              <div class="form-group col-xs-4">
                <label for="diseasePhoneNo">Phone Number : </label>
                <input type="tel" class="form-control input-sm" id="diseasePhoneNo" placeholder="+94767711924"/>
              </div>
              <div class="form-group col-xs-2 add-padding-4x">
                 <button id="diseaseupdate" class="btn btn-primary btn-lg">Update</button>
               </div>
             </div>


  <h3>Wait Time Alert Setting </h3>

           <div>
             <div class="form-group col-xs-3">
               <label for="waitTimeAlert">Timeout Limit(in sec): </label>
               <input type="text" class="form-control input-sm" id="waitTimeAlert" value="1000"/>
             </div>
             <div class="form-group col-xs-3">
               <label for="waitTimeEmail">Email Address : </label>
               <input type="text" class="form-control input-sm" id="waitTimeEmail" placeholder="sample@email.com"/>
             </div>
             <div class="form-group col-xs-4">
               <label for="waitTimePhoneNo">Phone Number : </label>
               <input type="tel" class="form-control input-sm" id="waitTimePhoneNo" placeholder="+94767711924"/>
             </div>
             <div class="form-group col-xs-2 add-padding-1x">
                <button id="waitTimeupdate" class="btn btn-primary btn-lg">Update</button>
              </div>

           </div>


       </div>
        </body>
        ]]>
    </Content>
</Module>
